{
  "name": "feather-testing",
  "version": "0.1.0",
  "description": "Phoenix Test-inspired fluent testing DSL for Playwright and React Testing Library",
  "license": "MIT",
  "keywords": [
    "testing",
    "playwright",
    "react-testing-library",
    "fluent",
    "dsl",
    "e2e",
    "integration"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./playwright": {
      "types": "./dist/playwright/index.d.ts",
      "import": "./dist/playwright/index.js",
      "default": "./dist/playwright/index.js"
    },
    "./rtl": {
      "types": "./dist/rtl/index.d.ts",
      "import": "./dist/rtl/index.js",
      "default": "./dist/rtl/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "@playwright/test": ">=1.40.0",
    "@testing-library/react": ">=14.0.0",
    "@testing-library/user-event": ">=14.0.0"
  },
  "peerDependenciesMeta": {
    "@playwright/test": {
      "optional": true
    },
    "@testing-library/react": {
      "optional": true
    },
    "@testing-library/user-event": {
      "optional": true
    }
  },
  "scripts": {
    "build": "tsc"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.0",
    "typescript": "~5.9.3"
  }
}
